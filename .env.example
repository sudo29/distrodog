# Django Settings - Copy to .env and update with your values
# ============================================================

# DEBUG: Set to False in production for security
DEBUG=True

# SECRET_KEY: Generate a secure key for production
# Run: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=django-insecure-change-this-to-a-secure-key-in-production

# Allowed hosts: Add your domain here
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Database Configuration
# ======================

# Database engine (postgresql is recommended for production)
DB_ENGINE=django.db.backends.postgresql

# Database name
DB_NAME=distrodog

# Database user
DB_USER=postgres

# Database password (change this!)
DB_PASSWORD=postgres

# Database host (localhost for local, 'db' for Docker)
DB_HOST=localhost

# Database port
DB_PORT=5432

# Email Configuration (Optional)
# ==============================
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Fly.io Configuration (Production Deployment)
# =============================================
# Set these when deploying to Fly.io
# DEBUG should be False in production
# SECRET_KEY should be a strong, random key
# ALLOWED_HOSTS should include your Fly.io domain
